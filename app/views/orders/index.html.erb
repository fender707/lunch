
<h1>Listing orders</h1>

<table>
  <tr>
      <th>Name<th>
      <th>Address</th>
      <th>Email</th>
      <th>Price</th>
      <th>Created_at</th>
      <th class="offset">Destroy</th>

  </tr>

<% @orders.each do |order| %>
  <tr class="offset">
    <td><%= order.name %></td>
    <td></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.price %></td>
    <td><%= order.created_at %></td>
    <td><%= link_to 'Destroy',order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Order', new_order_path %>
<p><%= will_paginate @orders %></p>

